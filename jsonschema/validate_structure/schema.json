{
    "type": "object",
    "minProperties": 1,
    "maxProperties": 1,
    "unevaluatedProperties": false,
    "properties": {
        "file": { "$ref": "#/$defs/file" },
        "folder": { "$ref": "#/$defs/folder"},
        "and": { "type": "array" },
        "or": { "type": "array" }
    },
    "$defs": {
        "file": {
            "type": "object",
            "properties": {
                "mandatory": {"type": "boolean"},
                "path": {"type": "string"},
                "rules": {
                    "type": "object",
                    "properties": {
                        "pattern": {"type": "string"}
                    },
                    "additionalProperties": false
                }
            },
            "required": ["mandatory", "path"],
            "additionalProperties": false
        },
        "folder": {
            "type": "object",
            "properties": {
                "mandatory": {"type": "boolean"},
                "path": {"type": "string"},
                "only_folders": {"type": "boolean"}
            },
            "required": ["mandatory", "path"],
            "additionalProperties": false
        }
    }
}